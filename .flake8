# GNU Radio Python Style Configuration
# Based on: https://deepwiki.com/gnuradio/gnuradio/7-development-and-contributing#coding-guidelines

[flake8]
max-line-length = 120
extend-ignore = E265,E266,E275,E402,E501,E704,E712,E713,E714,E711,E721,E722,E741,W504,W605
exclude = 
    .git,
    __pycache__,
    build,
    dist,
    *.egg-info

